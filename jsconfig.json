{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2015",
		"moduleResolution": "Node16",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*/index.jsx"],
			"@assets/*": ["src/assets/*"]
		},
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"exclude": ["node_modules", "**/node_modules/*", "dist"]
}
